import java.util.Scanner;
import java.util.ArrayList;
import java.util.*;


public class Students {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        ArrayList<String> studentList = new ArrayList<>();
        
        while (true) {
            System.out.println("\nPlease Choose:");
            System.out.println("1. Enroll");
            System.out.println("2. Un-enroll");
            System.out.println("3. Print Student List");
            System.out.println("4. Sort");
            System.out.println("5. Search");
            System.out.println("6. Exit");
            
            System.out.print("Enter your choice: ");
            int choice = input.nextInt();
            input.nextLine();

            switch (choice) {
                case 1:
                    System.out.print("Enter student's name to enroll: ");
                    String enroll = input.nextLine();
                    enrollStudent(studentList, enroll);
                    break;
                case 2:
                    System.out.print("Enter student's name to un-enroll: ");
                    String unenroll= input.nextLine();
                    unenrollStudent(studentList, unenroll);
                    break;
                case 3:
                    printStudentList(studentList);
                    break;
                case 4:
                    sortStudentNames(studentList);
                    break;
                case 5:
                    System.out.print("Enter student's name to search: ");
                    String searchName = input.nextLine();
                    searchStudent(studentList, searchName);
                    break;
                case 6:
                    System.out.println("Exiting the program.");
                    input.close();
                    System.exit(0);
                    break;
                default:
                    System.out.println("Invalid choice. Please try again.");
            }
        }
    }// end of main

    private static void enrollStudent(ArrayList<String> studentList, String name) {
        studentList.add(name);
        System.out.println(name + " has been enrolled.");
    }

    private static void unenrollStudent(ArrayList<String> studentList, String name) {
        if (studentList.remove(name)) {
            System.out.println(name + " has been un-enrolled.");
        } else {
            System.out.println(name + " not found in the student list.");
        }
    }

    private static void printStudentList(ArrayList<String> studentList) {
        System.out.println("\nStudent List:");
        for (String student : studentList) {
            System.out.println(student);
        }
    }

    private static void sortStudentNames(ArrayList<String> studentList) {
        Collections.sort(studentList);
        System.out.println("Student list after sorted.");
    }

    private static void searchStudent(ArrayList<String> studentList, String name) {
        if (studentList.contains(name)) {
            System.out.println(name + " is enrolled.");
        } else {
            System.out.println(name + " is not found in the student list.");
        }
    }
}// end of class

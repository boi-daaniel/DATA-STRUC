import java.util.*;

class TestClass {
    public static void main(String[] args) {
        final int MAXSIZE = 10;
        int[] myArray = new int[MAXSIZE];
        Scanner Input = new Scanner(System.in);

        ArrayOperations Ao = new ArrayOperations(MAXSIZE);

        while (true) {
            System.out.println("\nMenu:");
            System.out.println("1. Populate Array");
            System.out.println("2. Print Array");
            System.out.println("3. Find MIN");
            System.out.println("4. Find MAX");
            System.out.println("5. Insert at the Beginning");
            System.out.println("6. Insert in the Middle");
            System.out.println("7. Insert at the End");
            System.out.println("8. Remove Item");
            System.out.println("9. Search for Item");
            System.out.println("10. Sort Array");
            System.out.println("11. Quit");

            System.out.print("Enter your choice: ");
            int choice = Input.nextInt();

            switch (choice) {
                case 1:
                    Ao.populate(myArray);
                    break;
                case 2:
                    Ao.print(myArray);
                    break;
                case 3:
                    System.out.println("MIN: " + Ao.getMin(myArray));
                    break;
                case 4:
                    System.out.println("MAX: " + Ao.getMax(myArray));
                    break;
                case 5:
                    System.out.print("Enter element to insert at the beginning: ");
                    int element = Input.nextInt();
                    myArray = Ao.insertBeginning(element, myArray);
                    break;
                case 6:
                    System.out.print("Enter element to insert: ");
                    element = Input.nextInt();
                    System.out.print("Enter position to insert at: ");
                    int position = Input.nextInt();
                    myArray = Ao.insertMiddle(element, position, myArray);
                    break;
                case 7:
                    System.out.print("Enter element to insert at the end: ");
                    element = Input.nextInt();
                    myArray = Ao.insertEnd(element, myArray);
                    break;
                case 8:
                    System.out.print("Enter element to remove: ");
                    element = Input.nextInt();
                    myArray = Ao.removeItem(element, myArray);
                    break;
                case 9:
                    System.out.print("Enter element to search: ");
                    element = Input.nextInt();
                    int searchResult = Ao.search(element, myArray);
                    if (searchResult != -1) {
                        System.out.println("Found " + element + " at index " + searchResult);
                    } else {
                        System.out.println(element + " not found in the array.");
                    }
                    break;
                case 10:
                    myArray = Ao.sort(myArray);
                    System.out.println("Array after sorting:");
                    Ao.print(myArray);
                    break;
                case 11:
                    System.out.println("Quitting the program.");
                    Input.close();
                    System.exit(0);
                default:
                    System.out.println("Invalid choice. Please enter a valid option.");
            }//End of Switch
        }//End of while
    }// End of main
}//End of Class
